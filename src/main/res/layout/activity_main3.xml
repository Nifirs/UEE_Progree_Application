<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="275dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Reserve seats in long distance buses across Sri Lanka"
        android:textColor="#1c21c9"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="283dp"
        android:layout_height="42dp"

        android:layout_marginTop="224dp"
        android:background="@drawable/oval"
        android:drawableLeft="@drawable/ic_place"
        android:ems="10"
        android:hint="   Type a city"
        android:inputType="textPersonName"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="151dp"
        android:layout_height="41dp"

        android:layout_marginTop="280dp"
        android:text="Starting from"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="151dp"
        android:layout_height="41dp"
        android:layout_marginTop="176dp"
        android:text="Going to"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="287dp"
        android:layout_height="42dp"

        android:layout_marginTop="324dp"
        android:background="@drawable/oval"
        android:drawableLeft="@drawable/ic_place"
        android:ems="10"
        android:hint="   Type your destination"
        android:inputType="textPersonName"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="151dp"
        android:layout_height="41dp"

        android:layout_marginTop="380dp"
        android:text="Journey Date"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/date"
        android:layout_width="279dp"
        android:layout_height="43dp"

        android:layout_marginTop="228dp"
        android:layout_weight=".5"
        android:background="@drawable/oval"
        android:drawableLeft="@drawable/ic_date"
        android:hint="   Choose a date"

        android:clickable="false"
        android:cursorVisible="false"

        android:editable="false"
        android:focusable="false"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/button"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/buttonoval"
        android:text="Search"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>